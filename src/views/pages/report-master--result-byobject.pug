extends ../layouts/personal

include ../../blocks/modules/personal-aside/personal-aside.pug
include ../../blocks/modules/personal-top/personal-top.pug
include ../../blocks/modules/personal-content/personal-content.pug
include ../../blocks/modules/report-master/report-master.pug
include ../../blocks/components/breadcrumb/breadcrumb.pug
include ../../blocks/components/pagination/pagination.pug

block variables
    include ../../data/data.pug
    - const title = "Привратник - Статистика доступа - Количество попыток доступа за период по объектам" 


block aside
  +personal-aside({
    title: 'Статистика доступа'
  })

block content
  +personal-top()

  .personal-content
    .personal-content__breadcrubs
        +breadcrumb([
          'Общая информация',
          'Статистика доступа',
        ])
    .personal-content__h1 Статистика доступа 
    .personal-content__tabs
      ul(data-tab-center="")
        li: a(href="personal-access.html") Открытия в реальном времени
        li.is-active: a(href="report-master.html") Мастер отчётов

    .personal-content__h2 Мастер отчётов
    .personal-content__desc Легко формируйте отчёты по количеству попыток доступа за период, распределению доступа по времени суток, смотрите фото и видео проездов и другое. <br> Также вы сможете выгрузить отчёты в формате Excel-файла.

    +report-master({
      selected: 'Количество попыток доступа за период по объектам'
    })
    +report-result

block scripts
    script(src="/js/vendor.js")
    script(src="/js/common.js")