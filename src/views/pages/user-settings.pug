extends ../layouts/personal

include ../../blocks/modules/personal-aside/personal-aside.pug
include ../../blocks/modules/personal-top/personal-top.pug
include ../../blocks/modules/personal-content/personal-content.pug
include ../../blocks/components/breadcrumb/breadcrumb.pug

block variables
    include ../../data/data.pug
    - const title = "Привратник - Настройки пользователя"


block aside
  +personal-aside({})

block content
  +personal-top()
  
  .personal-content
    .personal-content__breadcrubs
        +breadcrumb([
          'Общая информация',
          'Настройки пользователя',
        ])
    .personal-content__h1 Настройки пользователя
    .personal-content__main
      form(action='#' method='POST')
        .form
          .form__item
            .form__subitem.form__subitem--leftlabel
              | Ваше имя
              span(data-tooltip="Если оставить пустые поля, вместо имени пользователя бедет использован телефон")
                +icons('#ic_tooltip')
            .form__subitem
              input(type="text" placeholder="Имя")
            .form__subitem
              input(type="text" placeholder="Фамилмя")

          .form__item
            .form__subitem.form__subitem--leftlabel
              | Номер телефона
              span.color--red *
              span(data-tooltip="Номер телефона для доступа к аккаунту")
                +icons('#ic_tooltip')
            .form__subitem
              input(type="text" placeholder="+7 *** ***-**-**")

          .form__item
            .form__subitem.form__subitem--leftlabel
              | Email
              span(data-tooltip="Email на который будем присылать уведомления")
                +icons('#ic_tooltip')
            .form__subitem
              input(type="text" placeholder="Email")

          .form__item
            .form__subitem.form__subitem--leftlabel
              | Пароль
              span.color--red *
              span(data-tooltip="Придумайте надежный пароль")
                +icons('#ic_tooltip')
            .form__subitem
              input(type="text" placeholder="Пароль")
            .form__subitem
              input(type="text" placeholder="Повторить пароль")

          .form__item
            .form__subitem
              .form__buttons
                button.btn.btn-white(type="submit") Отмена
                button.btn(type="submit") Сохранить изменения
                


    


block scripts
    script(src="/js/vendor.js")
    script(src="/js/common.js")