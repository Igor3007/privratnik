extends ../layouts/personal

include ../../blocks/modules/personal-aside/personal-aside.pug
include ../../blocks/modules/personal-top/personal-top.pug
include ../../blocks/modules/personal-content/personal-content.pug
include ../../blocks/components/breadcrumb/breadcrumb.pug
include ../../blocks/modules/transaction/transaction.pug

block variables
    include ../../data/data.pug
    - const title = "Привратник - Финансы"


block aside
  +personal-aside({
    title: 'Финансы'
  })

block content
  +personal-top()
  
  .personal-content
    .personal-content__breadcrubs
        +breadcrumb([
          'Общая информация',
          'Финансы',
        ])
    .personal-content__h1 Финансы
         
    .personal-content__main
      .activate-service
        .activate-service__icon: +bgimage('/img/common/connect.svg')
        .activate-service__main
          .activate-service__title Переходите в раздел «Услуги»
          .activate-service__desc Там вы можете подключить необходимый дополнительный функционал или отключить уже не нужный.
        .activate-service__btn
          a(href='/personal-services.html'): button.btn.btn--add Перейти в раздел услуги

      +transactions()
      

    


block scripts
    script(src="/js/vendor.js")
    script(src="/js/common.js")