include ../../helpers/mixins.pug
include ../../../blocks/modules/popup-form/popup-form.pug

.popup-form
    .popup-form__title Изменить пользователя
    .popup-form__desc Пожалуйста, проверьте правильность заполнения всех полей, чтобы избежать непредвиденных ситуаций
    .popup-form__fields
       
        form(action='/access-users-list.html' method='GET')
             .form
               .form__item: .form__subitem
                    .form__label Имя пользователя
                    input(type="text" placeholder="Введите имя" value="Тестовый Михаил")
               .form__item: .form__subitem
                    .form__label Группа пользователя
                    select(name="group")
                         option(value="0") Общая группа
                         option(value="1") Жильцы
                         option(value="2" selected) Спецтранспорт
                         option(value="3") Обслуживающий персонал
                         option(value="3") Жильцы с ограниченным доступом
                         option(value="3") Жильцы с частичным доступом
               .form__item: .form__subitem
                    .form__label Номер телефона
                    input(type="text" placeholder="Введите номер" value="+7 (490) 560-20-30" )
               .form__item: .form__subitem
                    .form__label Госномер транспортного средства (необязательно)
                    input(type="text" placeholder="Введите номер т/с" value="А037НУ799")
               .form__item: .form__subitem
                    strong Идентификаторы дополнительных методов открытия
                    ul.switch-list
                         li: +checkbox('Пульт', 'remote-control', true)
                         li: +checkbox('RFID карта', 'rfid-card', true)
                         li: +checkbox('RFID метка', 'rfid-chip', true)

               .form__item: .form__subitem
                    .form__label Примечание (необязательно)
                    input(type="text" placeholder="Текст примечания" value="Пример текста примечания, просто несколько слов")
                
                
               
     
               .form__item
                    .form__subitem
                         button.btn Сохранить изменения
                    .form__subitem
                         button.btn.btn-line(data-af-popup="close" type="button") Закрыть 