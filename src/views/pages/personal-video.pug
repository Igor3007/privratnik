extends ../layouts/personal

include ../../blocks/modules/personal-aside/personal-aside.pug
include ../../blocks/modules/personal-top/personal-top.pug
include ../../blocks/modules/personal-content/personal-content.pug
include ../../blocks/components/breadcrumb/breadcrumb.pug

block variables
    include ../../data/data.pug
    - const title = "Привратник - Видеонаблюдение"


block aside
  +personal-aside({
    title: 'Видеонаблюдение'
  })

block content
  +personal-top()
  
  .personal-content
    .personal-content__breadcrubs
        +breadcrumb([
          'Общая информация',
          'Видеонаблюдение',
        ])
    .personal-content__h1 Видеонаблюдение
         
    .personal-content__main
      .activate-service
        .activate-service__icon: +bgimage('/img/common/connect.svg')
        .activate-service__main
          .activate-service__title Услуга не подключена
          .activate-service__desc Перейдите в раздел «Услуги» с помощью кнопки «Подключить услугу» и активируйте то, что вас интересует.
        .activate-service__btn
          a(href='/personal-video-list.html'): button.btn.btn--add Подключить услугу


    


block scripts
    script(src="/js/vendor.js")
    script(src="/js/common.js")